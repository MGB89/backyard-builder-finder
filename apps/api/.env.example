# Backyard Builder Finder - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Backyard Builder Finder API"
ENVIRONMENT=development
DEBUG=true

# Database (PostGIS required)
DATABASE_URL=postgresql+asyncpg://bbf_user:dev_password@localhost:5432/backyard_builder
SYNC_DATABASE_URL=postgresql://bbf_user:dev_password@localhost:5432/backyard_builder
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# NextAuth Integration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-must-match-frontend

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# AWS (for production)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=backyard-builder-exports
KMS_KEY_ID=

# OAuth Providers (for SSO)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# LLM Providers (users provide their own keys)
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Geocoding (optional - fallback to Nominatim)
MAPBOX_TOKEN=
GOOGLE_MAPS_API_KEY=
MAPTILER_KEY=

# Data Sources (free/open)
LA_PARCELS_ENDPOINT=https://maps.lacity.org/arcgis/rest/services/Parcel/MapServer/0
LA_ZONING_ENDPOINT=https://maps.lacity.org/arcgis/rest/services/Zoning/MapServer/0
MSFT_BUILDINGS_URL=https://github.com/microsoft/USBuildingFootprints

# RESO MLS (optional - only if user has credentials)
RESO_CLIENT_ID=
RESO_CLIENT_SECRET=
RESO_API_URL=

# Feature Flags
ENABLE_CV_MODULE=false
ENABLE_PORTAL_SCRAPING=false
REQUIRE_TOS_ACCEPTANCE=true

# System Limits
MAX_PARCELS_PER_SEARCH=50000
MAX_LLM_TOKENS_PER_ORG_DAILY=100000
MAX_CV_TILES_PER_SEARCH=100
DEFAULT_PAGE_SIZE=100
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Geoprocessing Defaults
DEFAULT_FRONT_SETBACK=25.0
DEFAULT_SIDE_SETBACK=5.0
DEFAULT_REAR_SETBACK=10.0
MAX_LOT_COVERAGE=0.4
DEFAULT_FAR=0.5

# Logging
LOG_LEVEL=INFO

# Development Settings
ENABLE_DOCS=true
ENABLE_REDOC=true